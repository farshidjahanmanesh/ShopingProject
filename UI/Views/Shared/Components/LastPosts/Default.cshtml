@model List<PostSummeryViewModel>


    <section class="section latest-blog outer-bottom-vs wow fadeInUp">
        <h3 class="section-title" style="direction:rtl;text-align:right;margin-right:50px;">آخرین مطالب</h3>
        <div class="blog-slider-container outer-top-xs">
            <div class="owl-carousel blog-slider custom-carousel" >
                @foreach (var item in Model)
                {
                    <div class="item" >
                        <div class="blog-post">
                            <div class="blog-post-image">
                                <div class="image"> <a asp-route="Article" asp-route-postid="@item.Id" asp-route-slug="@item.Slug"><img src="/images/blog-post/@item.BaseImage" alt="@item.Title"></a> </div>
                            </div>
                            <!-- /.blog-post-image -->

                            <div class="blog-post-info text-left" style="direction:rtl;text-align:right">
                                <h3 class="name"><a asp-route="Article" asp-route-postid="@item.Id" asp-route-slug="@item.Slug">@item.Title</a></h3>
                                <span class="info">By Jone Doe &nbsp;|&nbsp; @item.PublishDate.PesrianDay() / @item.PublishDate.PesrianMonth()/@item.PublishDate.PesrianYear()</span>
                                <p class="text text-wraping" onclick="RevealHiddenOverflow(this);">
                                    @item.Summery
                                </p>
                                <a asp-route="Article" asp-route-postid="@item.Id" asp-route-slug="@item.Slug" class="lnk btn btn-primary">ادامه مطلب</a>
                            </div>
                            <!-- /.blog-post-info -->

                        </div>
                        <!-- /.blog-post -->
                    </div>
                }

                <!-- /.item -->

            </div>
            <!-- /.owl-carousel -->
        </div>
        <!-- /.blog-slider-container -->
    </section>